{
  "name": "xmtp-research-agent",
  "version": "1.0.0",
  "description": "XMTP research agent with x402 payment protocol on Base blockchain",
  "type": "module",
  "main": "dist/src/agent/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/agent/index.js",
    "dev": "node --loader ts-node/esm --no-warnings=ExperimentalWarning src/agent/index.ts",
    "service:market": "node --loader ts-node/esm --no-warnings=ExperimentalWarning src/services/market-data.ts",
    "service:sentiment": "node --loader ts-node/esm --no-warnings=ExperimentalWarning src/services/sentiment.ts",
    "service:onchain": "node --loader ts-node/esm --no-warnings=ExperimentalWarning src/services/onchain.ts",
    "services:all": "concurrently \"npm run service:market\" \"npm run service:sentiment\" \"npm run service:onchain\"",
    "generate-credentials": "node --loader ts-node/esm --no-warnings=ExperimentalWarning scripts/generate-credentials.ts",
    "initialize-production": "node --loader ts-node/esm --no-warnings=ExperimentalWarning scripts/initialize-agent-production.ts",
    "check-network": "node --loader ts-node/esm --no-warnings=ExperimentalWarning scripts/check-agent-network.ts"
  },
  "keywords": [
    "xmtp",
    "x402",
    "base",
    "blockchain",
    "ai-agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@xmtp/agent-sdk": "^1.1.14",
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@locus/mcp-client-credentials": "^1.0.0",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.9.0",
    "@types/cors": "^2.8.15",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
